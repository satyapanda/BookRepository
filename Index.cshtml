@page
@model Treatment.Pages.Hospitals.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
    <style>
        table.dataTable thead th, table.dataTable thead td {
            padding: 10px;
            border-bottom: 1px solid #111;
            background-color: #D4DCEA
        }
    </style>
<h1>Hospitals</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form method="post">
    <div class="row container">

        <table id="HospitalTable" class="table table-striped table-bordered table-hover responsive" style="width:1500px"></table>
    </div>
    <script>
        $(document).ready(function () {

            $('#HospitalTable').DataTable({
                dom: 'Bfrtip',
                buttons: [ 'csv', 'excel', 'print'],
                serverSide: true,
                "scrollY": 700,
                "pageLength": 25,
                //"scrollX": true,
                searching: true,
                //"autoWidth": true,
                "initComplete": function (settings, json) {
                    $("#HospitalTable").wrap("<div style='overflow:auto; width:100%;position:relative;'></div>");
                },
                ajax: {
                    "url": "/Hospitals/Index?handler=HospitalDataTable",

                    "dataType": "json",
                    "beforeSend": function (xhr) {
                        xhr.setRequestHeader("XSRF-TOKEN",
                            $('input:hidden[name="__RequestVerificationToken"]').val());
                    },
                    "type": "POST"
                },
                columns: [
                    {
                        name: 'HospitalId',
                        data: "hospitalId",
                        title: "HospitalId",
                        sortable: false,
                        searchable: false,
                        visible: false
                    },
                    {
                        name: 'HospitalName',
                        data: "hospitalName",
                        title: "HospitalName",
                        sortable: false,
                        searchable: true
                    },
                    {
                        name: 'Address',
                        data: "address",
                        title: "Address",
                        sortable: false,
                        searchable: false
                    },
                    {
                        name: 'City',
                        data: "city",
                        title: "City",
                        sortable: false,
                        searchable: false
                    },
                    {
                        name: 'ZipCode',
                        data: "zipCode",
                        title: "Zip Code",
                        sortable: false,
                        searchable: false
                    },
                    {
                        name: 'Phone',
                        data: "phone",
                        title: "Phone",
                        sortable: false,
                        searchable: false
                    },

                    {
                        name: 'Email',
                        data: "email",
                        title: "Email",
                        sortable: false,
                        searchable: false
                    },

                    {
                        name: 'WebSite',
                        data: "webSite",
                        title: "WebSite",
                        sortable: false,
                        searchable: false
                    },


                    {
                        "render": function (data, type, full, meta) { return '<a class="btn btn-info" href="/Hospitals/Details?id=' + full.hospitalId + '">Details</a>'; }
                    },
                    {
                        "render": function (data, type, full, meta) { return '<a class="btn btn-warning" href="/Hospitals/Edit?id=' + full.hospitalId + '">Edit</a>'; }
                    },
                ]
            });

            $(".dataTables_scroll").css("width", "1500px");
        });
    </script>
</form>
